<div class="bg-neutral-0 p-md-7 p-4 rounded-2 mb-4 d-flex flex-column">
  <!-- Desktop Student Icon  -->
  <div class="d-flex">
    <img src="../assets/images/<%= studentImage %>" alt="user profile image" width="60" height="60"
      class="me-6 d-none d-md-block rounded-circle object-fit-cover" />

    <div class="w-100">
        <!-- Student Question -->
      <div>
        <div class="d-flex">
          <img src="../assets/images/<%= studentImage %>" alt="user profile image" width="44" height="44"
            class="me-2 d-md-none d-block rounded-circle object-fit-cover" />

          <div>
            <p class="title text-neutral-100"><%= studentName %></p>
            <p class="fs-8 text-neutral-60 mb-4"><%= questionDate %></p>
          </div>
        </div>
        <p class="mb-4 fs-9 fs-md-7">
          <%- question %>
        </p>
      </div>

      <!-- Teacher Reply -->
      <div class="bg-neutral-10 rounded-2 p-4">
        <div class="w-100">
          <div class="d-flex align-items-center">
            <p class="title text-neutral-100 me-2"><%= teacherName %></p>
            <div
              class="d-flex align-items-center text-primary border border-primary fs-9 fw-normal py-1 px-2 rounded-2">
              授課老師</div>
          </div>
          <p class="fs-8 text-neutral-60 mb-4"><%= replyDate %></p>
        </div>
        <p class="fs-9 fs-md-7"><%- reply %></p>


      </div>
    </div>
  </div>
</div>