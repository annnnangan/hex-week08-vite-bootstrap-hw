<div
  class="card position-relative h-100 border-neutral-40 card-shadow slide-up-hover"
>
  <a href="#" class="h-100 d-flex flex-column">
    <!-- Badge -->
    <% if(course[0].badge) {%>
    <div
      class="badge badge-top py-2 px-3 mt-4 ms-4 text-alert bg-alert-10 subtitle position-absolute"
    >
      <%= course[0].badge %>
    </div>
    <% } %>

    <!-- Course Cover -->
    <img
      src="../assets/images/<%= course[0].coverImage %>"
      class="card-img-top w-100 object-fit-cover img-hover-darken"
      alt="course image"
    />

    <!-- Course Card Body -->
    <div class="card-body p-4 d-flex flex-column flex-grow-1">
      <!-- Course Name -->
      <h6 class="card-title mb-4"><%= course[0].courseName %></h6>

      <div class="d-flex justify-content-between align-items-center">
        <!-- Teacher Information -->
        <div class="d-flex align-items-center mt-auto">
          <div class="flex-shrink-0">
            <img
              src="../assets/images/<%= course[0].teacherImage %>"
              alt="avatar"
              class="rounded-circle object-fit-cover"
              width="35"
              height="35"
            />
          </div>
          <div class="flex-grow-1 ms-3">
            <p class="body-text text-neutral-80">
              <%= course[0].teacherName %>
            </p>
          </div>
        </div>
        <!-- Course Price -->
        <div class="d-flex flex-column align-items-end">
          <h6 class="text-primary">NT$ <%= course[0].discountPrice %></h6>
          <p class="text-neutral-60 body-text-s">
            <del>NT$ <%= course[0].originalPrice %></del>
          </p>
        </div>
      </div>
    </div>

    <!-- Card Body Bottom -->
    <div class="card-footer mt-auto bg-neutral-0 p-4 flex-grow-1">
      <div class="d-flex justify-content-between align-items-center">
        <!-- left -->
        <div>
          <div
            class="badge py-2 px-3 text-neutral-80 bg-neutral-40 body-text-s mb-1"
          >
            <%= course[0].category%>
          </div>
          <p class="text-neutral-80 body-text-s">
            已有 <%= course[0].studentAmount %> 位同學加入
          </p>
        </div>
        <!-- right -->
        <div class="d-flex align-items-center">
          <p class="fw-medium d-flex align-items-center me-1">
            <span
              class="material-symbols-outlined material-symbols-outlined-fill color-yellow body-text-xs me-1"
            >
              kid_star
            </span>
            <%= course[0].rating %>
          </p>
          <p class="text-neutral-60 fw-medium body-text-s">
            (<%= course[0].ratingAmount %>)
          </p>
        </div>
      </div>
    </div>
  </a>
</div>
